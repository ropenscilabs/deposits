    "properties": {
        "abstract": {
            "type": "string"
        },
        "accessRights": {
            "description": "Information about who access the resource or an indication of its security status. Access Rights may include information regarding access or restrictions based on privacy, security, or other policies.",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "description": "Zenodo 'access_right' values",
                    "type": "string",
                    "enum": ["open", "embargoed", "restricted", "closed"]
                }
            ]
        },
        "accrualMethod": {
            "type": "object",
            "description": "See https://www.dublincore.org/specifications/dublin-core/collection-description/accrual-method/",
            "items": {
                "method": {
                    "type": "string",
                    "enum": ["deposit", "donation", "purchase", "loan", "license", "item_creation"]
                },
                "^description$": {
                    "type": "string"
                }
            }
        },
        "accrualPeriodicity": {
            "description": "Recommended vocabulary at https://www.dublincore.org/specifications/dublin-core/collection-description/frequency/",
